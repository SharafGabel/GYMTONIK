<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="model.SessionUser" table="sessionuser"
           catalog="gymtonik_database">
        <id name="idSession" type="java.lang.Integer">
            <column name="idSession"/>
            <generator class="identity"/>
        </id>
        <property name="timeSleep" type="int"/>
        <property name="perform" type="boolean"/>
        <property name="dateProgram" type="timestamp"/>
        <list name="trainings" cascade="all" >
            <key column="idExercise"/>
            <index column="idx"/>
            <one-to-many class="model.Exercise"/>
        </list>



        <list name="performances" inverse="false" table="PERFORMANCE">
            <key>
                <column name="id" />
            </key>
            <index>
                <column name="idx"/>
            </index>
            <one-to-many class="model.Performance"/>
        </list>

    </class>
</hibernate-mapping>